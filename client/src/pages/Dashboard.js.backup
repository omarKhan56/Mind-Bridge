    accent: '#8B5CF6',
    warning: '#F59E0B',
    danger: '#EF4444',
    success: '#22C55E',
    info: '#06B6D4'
  };

  // Enhanced chart data processing
  const getWellnessTrendData = () => {
    if (wellnessData.length === 0) {
      // Generate sample data for demo
      const last7Days = Array.from({ length: 7 }, (_, i) => {
        const date = new Date();
        date.setDate(date.getDate() - (6 - i));
        return {
          date: date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
          mood: Math.floor(Math.random() * 3) + 7, // 7-10 range
          stress: Math.floor(Math.random() * 4) + 3, // 3-7 range
          sleep: Math.floor(Math.random() * 3) + 6, // 6-9 range
          energy: Math.floor(Math.random() * 3) + 6 // 6-9 range
        };
      });
      return last7Days;
    }
    return wellnessData.slice(-7).map(entry => ({
      date: new Date(entry.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }),
      mood: entry.mood || 5,
      stress: entry.stress || 5,
      sleep: entry.sleep || 5,
      energy: entry.energy || 5
    }));
  };

  const getAppointmentStatusData = () => {
    if (!Array.isArray(appointments) || appointments.length === 0) {
      return [
        { name: 'Scheduled', value: 2, color: COLORS.primary },
        { name: 'Completed', value: 5, color: COLORS.success },
        { name: 'Cancelled', value: 1, color: COLORS.danger }
      ];
    }
    
    const statusCounts = appointments.reduce((acc, apt) => {
      acc[apt.status] = (acc[apt.status] || 0) + 1;
      return acc;
    }, {});
    
    return Object.entries(statusCounts).map(([status, count]) => ({
      name: status.charAt(0).toUpperCase() + status.slice(1),
      value: count,
      color: status === 'completed' ? COLORS.success : 
             status === 'pending' ? COLORS.warning : 
             status === 'cancelled' ? COLORS.danger : COLORS.primary
    }));
  };

  const getGoalProgressData = () => {
    if (currentGoals.length === 0) {
      return [
        { name: 'Exercise', progress: 75, target: 100, color: COLORS.success },
        { name: 'Sleep', progress: 60, target: 100, color: COLORS.info },
        { name: 'Meditation', progress: 40, target: 100, color: COLORS.accent },
        { name: 'Study', progress: 85, target: 100, color: COLORS.primary }
      ];
    }
    return currentGoals.slice(0, 4).map(goal => ({
      name: goal.title.length > 10 ? goal.title.substring(0, 10) + '...' : goal.title,
      progress: goal.progress || 0,
      target: 100,
      color: goal.progress >= 80 ? COLORS.success : 
